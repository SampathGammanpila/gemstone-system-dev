{
    "name": "gemstone-system-backend",
    "version": "0.1.0",
    "description": "Backend API and admin panel for the gemstone system",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc && npm run build:css",
        "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/styles/output.css --watch",
        "dev:css": "postcss src/admin/assets/css/tailwind.css -o public/admin/css/tailwind.css --watch",
        "start": "node dist/index.js",
        "dev": "concurrently \"nodemon --exec ts-node -r ./tsconfig-paths-bootstrap.js src/index.ts\" \"npm run dev:css\"",
        "test": "jest",
        "lint": "eslint . --ext .ts",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "gemstone",
        "api",
        "express",
        "postgres"
    ],
    "dependencies": {
        "@types/express-ejs-layouts": "^2.5.4",
        "@types/handlebars": "^4.0.40",
        "@types/nodemailer": "^6.4.17",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-ejs-layouts": "^2.5.1",
        "express-rate-limit": "^7.1.1",
        "express-validator": "^7.0.1",
        "handlebars": "^4.7.8",
        "helmet": "^7.0.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.10.1",
        "pg": "^8.11.3",
        "tailwindcss": "^3.3.5",
        "uuid": "^9.0.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.4",
        "@types/bcryptjs": "^2.4.5",
        "@types/compression": "^1.7.3",
        "@types/cookie-parser": "^1.4.4",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.18",
        "@types/jest": "^29.5.5",
        "@types/joi": "^17.2.2",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/morgan": "^1.9.6",
        "@types/multer": "^1.4.8",
        "@types/node": "^20.8.2",
        "@types/pg": "^8.10.3",
        "@types/supertest": "^2.0.14",
        "@types/uuid": "^9.0.4",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "eslint": "^8.50.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "postcss": "^8.5.3",
        "postcss-cli": "^11.0.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2"
    }
}
